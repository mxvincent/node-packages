{
	"name": "kubernetes",
	"version": "0.0.0",
	"main": "main.ts",
	"types": "main.ts",
	"license": "Apache-2.0",
	"private": true,
	"scripts": {
		"build": "swc ./src -d ./dist",
		"start": "node -r tsconfig-paths/register dist/main.js",
		"check:tsc": "tsc --noEmit --skipLibCheck",
		"check:tsc:watch": "tsc --noEmit --watch --skipLibCheck",
		"check:eslint": "eslint --ignore-pattern 'src/imports/*' src",
		"import-api-resources": "kubectl get crds -o yaml > crd.yaml;pnpm cdk8s import --output src/imports;rm crd.yaml",
		"generate-manifests": "cdk8s synth --output manifests --check-upgrade=false",
		"debug": "node -r @swc-node/register src/main.ts"
	},
	"devDependencies": {
		"@types/node": "^22.17.1",
		"@types/ramda": "^0.30.2",
		"cdk8s": "^2.70.7",
		"cdk8s-cli": "^2.200.150",
		"cdk8s-plus-31": "^2.2.8",
		"constructs": "^10.4.2",
		"ramda": "^0.30.1",
		"tiny-invariant": "^1.3.3"
	}
}
