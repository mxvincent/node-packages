{
	"name": "experience-a",
	"version": "0.0.0",
	"private": true,
	"main": "./dist/index.js",
	"types": "./src/index.ts",
	"scripts": {
		"build:swc": "swc ./src -d ./dist --strip-leading-paths",
		"build:tsc": "tsc",
		"build:watch": "pnpm run build:swc --watch",
		"clean": "find . ! -path '*/node_modules/*' -name 'dist' -d -prune -exec rm -rf '{}' +; find . -name '*.tsbuildinfo' -prune -exec rm -rf '{}' +; find . -path '*/.turbo' -type d -prune -exec rm -rf '{}' +",
		"check:eslint": "eslint src",
		"check:tsc": "tsc --noEmit",
		"check:tsc:watch": "tsc --noEmit --watch",
		"start:app-server": "node --watch  -r tsconfig-paths/register -r @swc-node/register  src/app-server.ts",
		"start:seed-database": "node -r reflect-metadata -r tsconfig-paths/register -r dotenv/config -r @swc-node/register src/scripts/database-seed.ts",
		"start:sandbox": "node --env-file=.env  -r tsconfig-paths/register  -r @swc-node/register -r reflect-metadata src/scripts/sandbox.ts",
		"test:all": "jest",
		"test:all:watch": "jest --watch"
	},
	"dependencies": {
		"@apollo/server": "4.12.2",
		"@mxvincent/core": "workspace:*",
		"@mxvincent/json-schema": "workspace:*",
		"@mxvincent/query-params": "workspace:*",
		"@mxvincent/telemetry": "workspace:*",
		"@mxvincent/typeorm": "workspace:*",
		"@nestjs/apollo": "^13.1.0",
		"@nestjs/common": "^11.1.6",
		"@nestjs/core": "^11.1.6",
		"@nestjs/graphql": "^13.1.0",
		"@nestjs/platform-express": "^11.1.6",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.2",
		"graphql": "^16.11.0",
		"graphql-fields": "^2.0.3",
		"nestjs-pino": "^4.4.0",
		"pg": "^8.16.3",
		"ramda": "^0.30.1",
		"reflect-metadata": "^0.2.2",
		"tiny-invariant": "^1.3.3",
		"tsconfig-paths": "^4.2.0",
		"typeorm": "^0.3.25"
	},
	"devDependencies": {
		"@faker-js/faker": "^9.9.0",
		"@mxvincent/tsconfig": "workspace:*",
		"@types/graphql-fields": "^1.3.9",
		"@types/ramda": "^0.30.2"
	}
}
