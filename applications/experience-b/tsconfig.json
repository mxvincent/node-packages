{
	"extends": "@mxvincent/tsconfig/commonjs.json",
	"include": ["src"],
	"exclude": ["*.test.ts", "*.stub.ts", "node_modules", "dist/**/*"],
	"compilerOptions": {
		"strict": true,
		"rootDir": "./src",
		"baseUrl": "./src",
		"outDir": "./dist",
		"module": "CommonJS",
		"paths": {
			"#/*": ["./*"],
			"#/jest/*": ["./@jest/*"]
		}
	}
}
