{
	"$schema": "https://turborepo.org/schema.json",
	"globalDependencies": [".env"],
	"tasks": {
		"build:swc": {
			"dependsOn": ["^build:swc"],
			"inputs": ["src/**/*.ts", "src/**/*.json"],
			"outputs": ["dist/**"]
		},
		"build:tsc": {
			"dependsOn": ["^build:tsc"],
			"inputs": ["src/**/*.ts", "src/**/*.json"],
			"outputs": ["dist/**"]
		},
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["src/**/*.ts", "src/**/*.json"],
			"outputs": ["dist/**"]
		},
		"clean": {
			"cache": false
		},
		"check:eslint": {
			"inputs": ["src/**/*.ts"]
		},
		"check:tsc": {
			"inputs": ["src/**/*.ts"]
		},
		"test:all": {
			"dependsOn": ["^build:swc"],
			"env": ["AMQP_*","DB_*"],
			"inputs": ["src/**/*.ts", "src/**/*.json"]
		}
	}
}
