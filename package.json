{
	"name": "node-packages",
	"packageManager": "pnpm@10.14.0+sha512.ad27a79641b49c3e481a16a805baa71817a04bbe06a38d17e60e2eaee83f6a146c6a688125f5792e48dd5ba30e7da52a5cda4c3992b9ccf333f9ce223af84748",
	"engines": {
		"node": ">=22.12"
	},
	"scripts": {
		"build:swc": "turbo run build:swc --filter=!'@action/*'",
		"build:tsc": "turbo run build:tsc --filter=!'@action/*'",
		"build:actions": "turbo run build:swc --filter='@action/*'",
		"build:packages": "turbo run build:swc --filter='./packages/*'",
		"clean": "rm -rf out && turbo run clean --parallel",
		"changeset": "changeset add",
		"changeset:bump": "changeset version",
		"changeset:tag": "changeset tag",
		"check:tsc": "turbo run check:tsc --filter=!'@action/*'",
		"check:eslint": "turbo run check:eslint --filter=!'@action/*'",
    "test:all": "turbo run test:all",
		"modules:clean": "find . -name \"node_modules\" -type d -prune -exec rm -rf '{}' +",
		"modules:info": "find . -name \"node_modules\" -type d -prune | xargs du -chs",
		"modules:install": "pnpm run modules:clean && pnpm install",
		"preinstall": "npx only-allow pnpm",
		"prepare": "is-ci || husky",
		"script:deploy-development": "./scripts/deploy-development.sh",
		"script:docker-build": "CI=true ./scripts/docker-build.sh"
	},
	"devDependencies": {
		"@changesets/changelog-github": "^0.5.1",
		"@changesets/cli": "^2.29.5",
		"@commitlint/config-conventional": "^19.8.1",
		"@eslint/js": "^9.33.0",
		"@swc-node/register": "^1.10.10",
		"@swc/cli": "^0.6.0",
		"@swc/core": "^1.13.3",
		"@swc/jest": "^0.2.39",
		"@types/jest": "^29.5.14",
		"@types/node": "^22.17.1",
		"commitlint": "^19.8.1",
		"eslint": "^9.33.0",
		"eslint-plugin-import": "^2.32.0",
		"husky": "^9.1.7",
		"is-ci": "^4.1.0",
		"jest": "^29.7.0",
		"prettier": "^3.6.2",
		"turbo": "^2.5.5",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.39.0"
	}
}
